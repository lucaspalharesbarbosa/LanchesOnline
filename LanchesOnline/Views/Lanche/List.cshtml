@model LancheListViewModel

<div><h2>@Model.Categoria</h2></div>
<div class="row">
    @foreach (var lanche in Model.Lanches) {
        <div class="col-sm-4 col-lg-4 col-md-4">
            <div class="img-thumbnail"><img src="@lanche.UrlImagem" class="img-rounded" /></div>
            <div class="figure-caption">
                <div class="pull-right">Preço: @lanche.Preco.ToString("c")</div>
                <h3>@lanche.Nome</h3>
                <p>@lanche.DescricaoCurta</p>
            </div>
        </div>
    }
</div>